/* miniprogram/pages/index/index.wxss */
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
  box-sizing: border-box;
  padding-top:100rpx;
}
.nav{
  width: 100%;
  position: absolute;
  top:0;
  left:0;
  height: 100rpx;
}
.nav-cont{
  display: flex;
  flex-wrap: nowrap;
  height: 100rpx;
  padding:0;
  margin: 0;
}
.nav-cont text{
  color:#000;
  padding: 0 12rpx;
  white-space: nowrap;
  font-size: 38rpx;
  line-height: 1;
}
.nav-cont text.active{
  color:rgba(21, 126, 251, 1);
  border-bottom: 1rpx solid rgba(21, 126, 251, 1);
}
.content{
  width: 100%;
  height: 100%;
}

.questionList{
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 20rpx 20rpx 0 20rpx;
}

.questionList>view{
  color:rgba(80, 80, 80, 1);
  box-sizing: border-box;
  width: 50%;
  overflow: hidden;
  padding-bottom: 20rpx;
}
.questionList>view:nth-child(odd){
  padding-right: 10rpx;
}
.questionList>view:nth-child(even){
  padding-left: 10rpx;
}
.questionList>view>view{
  padding: 20rpx;
  box-sizing: border-box;
  height: 200rpx;
  background: #fff;
}
.questionList view h2{
  display: block;
  overflow: hidden;
}